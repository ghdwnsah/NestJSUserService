  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  isValid   Boolean  @default(true)
  ip        String?  // íƒˆì·¨ ê°ì§€ìš© IP ì €ì¥
  createdAt DateTime @default(now())
  expiresAt DateTime
}

// ğŸ”¹ trustedDevices.prisma
model TrustedDevice {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  deviceToken String   @unique
  deviceName  String?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())
  expiresAt   DateTime

  @@index([userId])
}

